@import 'var.styl'
@import 'rules.styl'
@import 'functions.styl'

*
	//font-family 'Montserrat', sans-serif
	transition(.05s)

.load-animation
	width 100%
	height 100%
	top 0
	bottom 0
	position fixed
	background-color rgba(0, 0, 0, 0.54)
	z-index 10000
	transition 1s

.loading
	margin 300px auto
	padding 10px
	width 200px
	background-color white
	border-radius 3px
	transition 1.2s

.hidden
	display none

.label-required
	&:after
		content ' *'
		color RED_COLOR

.help-block
	color RED_COLOR
	font-weight bold
	font-size 12px
	margin 0

.form-error
	> input
		border 1px solid RED_COLOR

.task
	padding 5px
	border-bottom 1px solid LIGHT_COLOR